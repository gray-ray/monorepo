{
  "extends": "../../tsconfig.json",
  "include": ["src", "typings.d.ts"],
  "compilerOptions": {
    "declaration": true, // 生成声明文件
    "declarationDir": "./dist", // 声明文件输出目录
    "outDir": "./dist", // 编译输出目录
    "rootDir": "./src", // 源码根目录
    "emitDeclarationOnly": false // 是否只输出声明文件（false 表示同时输出 js 和 d.ts）
  }
}
